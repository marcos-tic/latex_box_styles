\RequirePackage[most]{tcolorbox}

\tcbset {
	base/.style={
		arc=0mm,
		bottomtitle=0.5mm,
		boxrule=0mm,
		colbacktitle=black!10!white,
		coltitle=black,
		fonttitle=\bfseries,
		left=2.5mm,
		leftrule=1mm,
		right=3.5mm,
		title={#1},
		toptitle=0.75mm,
	}
}

\definecolor{brandblue}{rgb}{0.34, 0.7, 1}
\newtcolorbox{mainbox}[1]{
	colframe=brandblue,
	base={#1}
}

\newtcolorbox{subbox}[1]{
	colframe=black!30!white,
	base={#1}
}


\newtcolorbox{eqbox}[1][]
